<UserControl x:Class="JobBoard.WpfApplication.EditDeleteSuggestUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JobBoard.WpfApplication"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="320" Height="45">
    <Grid Width="320">

        <Button x:Name="delBtn" Content="DELETE" Style="{DynamicResource SimpleButton}" VerticalAlignment="Top" RenderTransformOrigin="-0.08,-1.002" BorderBrush="{x:Null}" Background="#FFA7D479" Foreground="#FF1D1D1D" ClickMode="Press" IsDefault="True" Height="29" FontFamily="Calibri bold" FontSize="16" HorizontalAlignment="Left" Width="62" Click="delBtn_Click"/>
        <Button x:Name="editBtn" Content="EDIT" Margin="0,0,191,0" Style="{DynamicResource SimpleButton}" VerticalAlignment="Top" RenderTransformOrigin="-0.08,-1.002" BorderBrush="{x:Null}" Background="#FFA7D479" Foreground="#FF1D1D1D" ClickMode="Press" IsDefault="True" Height="29" FontFamily="Calibri bold" FontSize="16" HorizontalAlignment="Right" Width="62" Click="editBtn_Click"/>

        <Button x:Name="suggestBtn" Content="SUGGESTIONS" Style="{DynamicResource SimpleButton}" VerticalAlignment="Top" Width="107" RenderTransformOrigin="-0.08,-1.002" BorderBrush="{x:Null}" Background="Gray" Foreground="#FF1D1D1D" ClickMode="Press" IsDefault="True" Height="29" HorizontalAlignment="Right" FontFamily="Calibri bold" FontSize="16" Click="suggestBtn_Click"/>
        <Button x:Name="suggestBtn_Copy" Content="APPLIED" Margin="0,0,112,0" Style="{DynamicResource SimpleButton}" VerticalAlignment="Top" Width="74" RenderTransformOrigin="-0.08,-1.002" BorderBrush="{x:Null}" Background="Gray" Foreground="#FF1D1D1D" ClickMode="Press" IsDefault="True" Height="29" HorizontalAlignment="Right" FontFamily="Calibri bold" FontSize="16" Click="suggestBtn_Click"/>

    </Grid>
</UserControl>
